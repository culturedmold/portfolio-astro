---
interface Props {
    title: string;
    subtitle: string;
}

const {title, subtitle} = Astro.props;
---

<script>
    if (document.getElementById('subtitle').innerText == "") {
        document.getElementById('subtitle').remove();
    }
</script>

<div id='header-div' class="page-header-section">
    <h1>{title}</h1>
    <h5 id="subtitle">{subtitle}</h5>
</div>

<style>

    .page-header-section {
        text-align: center;
        background-color: #444b6e;
        /* margin-bottom: 2rem; */
        margin-top: 0;
    }

    h1 {
        margin: 0;
        padding: 1rem;
        color: white;
        font-family: "DM Serif Display", serif;
        font-size: 7rem;
        font-weight: bolder;
        color: #444b6e
        color: white;
        max-width: 80ch;
    }

    h5 {
        padding: 2rem;
        margin: auto;
        color: white;
        max-width: 80ch;
    }

    @media all and (max-width: 600px) {
        h1 {
            /* margin: 2rem; */
            padding: 1.5rem;
            font-size: 4rem;
        }

        h5 {
            padding: 0.5rem;
        }
    }

</style>