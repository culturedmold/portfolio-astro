---
import NavigationBar from "../components/NavigationBar.astro";
import H1ContentSection from "../components/H1ContentSection.astro";
import Footer from "../components/Footer.astro";
// import "../global-CSS/global.css";

interface Props {
    title: string;
    subtitle: string;
}
const {title, subtitle} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=DM Sans">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=DM Serif Display">
        <title>title</title>
    </head>

    <body>

        <main>
            <H1ContentSection title={title}, subtitle={subtitle}/>
            <NavigationBar/>
            <div id="experience">
              <h2 class="section-header">Experience</h2>
              <slot name="experience-slot" />
            </div>
            
            <div id="projects">
              <div class="section-header">Projects</div>
              <slot name="projects-slot" />
            </div>
        </main>

        <Footer/>
        
    </body>
</html>

<style is:global>

  html {
    scroll-behavior:smooth;
  }

  * {
    font-family: "DM Sans", sans-serif;
    vertical-align: baseline;
  }

  h3 {
    margin: 8pt 0pt;
    font-size: 36pt;
    font-family: "DM Serif Display", serif;
    color: #444b6e;
  }
  
  h4 {
    margin: 4pt 0pt;
    font-family: "DM Serif Display", serif;
    font-size: 24pt;
    font-weight: lighter;
    color: #495b4c;
  }
  
  h5 {
    margin: 4pt 0pt;
    font-family: "DM Serif Display", serif;
    font-size: 16pt;
    font-weight: lighter;
    color: #444b6e;
  }
  
  p {
    /* margin: 0; */
    font-size: 16pt;
    line-height: 1.5;
  }
  
  body {
    min-height: 100vh;
    /* min-width: 100vw; */
    display: flex;
    flex-direction: column;
    margin: 0;
    margin-top: 0;
  }

  .section-header {
    font-family: "DM Serif Display", serif;
    text-align: center;
    color: #444b6e;
    font-size: 5rem;
    margin: 0.5em 0em 0em 0em;
  }

/* small screens */
@media all and (max-width: 600px) {
  
  p {
    font-size: 12pt;
    margin-bottom: 48px;
  }

  .section-header {
    font-size: 3rem;
  }
}
</style>